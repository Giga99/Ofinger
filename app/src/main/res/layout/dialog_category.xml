                    android:text="Kupaci"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/womanClothPajamas"
                    android:text="Spavacice i pidzame"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
