                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Muska odeca"
                    android:id="@+id/manCloth"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zenska odeca"
                    android:id="@+id/womanCloth"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Muska obuca"
                    android:id="@+id/manShoes"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zenska obuca"
                    android:id="@+id/womanShoes"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modni detalji"
                    android:id="@+id/accessories"/>

