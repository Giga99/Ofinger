                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/manClothUnderwear"
                    android:text="Donji ves i carape"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
