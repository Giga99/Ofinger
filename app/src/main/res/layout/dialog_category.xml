                android:id="@+id/subcategoryAccessories"
                android:layout_margin="15dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modni detalji"
                    android:textSize="18sp"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
