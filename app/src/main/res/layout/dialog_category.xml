                    android:layout_height="wrap_content"
                    android:id="@+id/manClothTshirt"
                    android:text="Majice"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/manClothTracksuit"
                    android:text="Trenerke"/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/manClothJeans"
                    android:text="Dzins" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/manClothPants"
                    android:text="Pantalone"/>

                <CheckBox
                    android:layout_width="match_parent"
